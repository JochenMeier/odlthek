form(method='post', action="/bookings/" + booking.gadget + "/edit", id="book")
  div.modal-header
    button(type="button", class="close", data-dismiss="modal")
    h3 Update booking
    = booking.gadgetname

  div.modal-body
    .row
      .col-md-5
        h4 Start
        input(type='date', name='startdate', value=startdate)
        span.dateIcon
        br
        input(type='time', name='starttime', value=starttime)
        span.timeIcon

      .col-md-2.btw

      .col-md-5
        h4 End
        input(type='date', name='enddate', value=enddate)
        span.dateIcon
        input(type='time', name='endtime', value=endtime)
        span.timeIcon
      .clear

    if(locals.error)
      p.text-danger= error

  div.modal-footer
    a.btn(onclick="bookNow(); return false;") Save

