form(method='post', action="/bookings/" + gadgetId + "/save", id="book")
  .modal-header
    button(type="button", class="close", data-dismiss="modal") &times;

    h3 Booking
    if (gadget)
      = gadget.brand
      |&nbsp;
      b= gadget.model
    else
      = booking.gadgetname

  input(type='hidden', name='_id', value=booking._id)

  .modal-body
    .row
      .col-md-5
        h4 Start
        input(type='date', name='startdate', value=startdate)
        span.dateIcon
        br
        input(type='time', name='starttime', value=starttime)
        span.timeIcon

      .col-md-2.btw

      .col-md-5
        h4 End
        input(type='date', name='enddate', value=enddate)
        span.dateIcon
        input(type='time', name='endtime', value=endtime)
        span.timeIcon
      .clear

    if(error)
      .alert.alert-danger.alert-dismissible
        button.close(data-dismiss="alert") &times;
        = error

  .modal-footer
    a.btn(onclick="bookNow(); return false;") Save booking

