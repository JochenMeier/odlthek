extends ../layout

block content
  if(locals.bookings)
    .table-responsive
      table
        tr
          th Device (ID)
          th Start Reservation
          th End Reservation
          th Status
          th
          th
        - each booking in bookings
          tr
            td
              a(href="/gadgets/" + booking.gadget)
                =booking.gadgetname
            td
              =fmtDatetime(booking.start)
            td
              =fmtDatetime(booking.end)
              if (booking.expired)
                span.text-danger
                  bÂ (Expired)
            td
              =booking.status
            td.tools
              if (booking.status !== 'closed')
                a(
                  href="/bookings/" + booking._id + "/edit",
                  data-toggle="modal",
                  data-target="#bookingModal"
                ).edit
            td.tools
              if (booking.status === 'open')
                a(href="/bookings/" + booking._id + "/remove").cancel-booking.cancel