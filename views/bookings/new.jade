form(method='post',action="/bookings/"+gadget._id+"/new",id="book")
  .getBook
    h1(onclick="$('#book').hide();") Book
    span.bookBrand= gadget.brand
    span.bookName= gadget.name
    a(onclick="$('#book').hide();") X
  if(locals.error)
    div(style="background-color: #f00;")= error
  .bookingTime
    .start
      h2 Start 
      input(type='date',name='startdate',value=locals.sdate)
      span.dateIcon 
      br
      input(type='time',name='starttime',value=locals.stime)
      span.timeIcon
    .btw 
    .end
      h2 End
      input(type='date',name='enddate',value=locals.sdate)
      span.dateIcon 
      input(type='time',name='endtime',value=locals.etime)
      span.timeIcon 
    .clear
    div(onclick="bookNow(); return false;").book 
      span Buchen
  br
