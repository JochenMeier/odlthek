form(method='post', action="/bookings/" + gadget._id + "/save", id="book")
  div.modal-header
    button(type="button", class="close", data-dismiss="modal")
    h3 Book
    = gadget.brand
    | 
    b= gadget.name

  div.modal-body
    .row
      .col-md-5
        h4 Start
        input(type='date', name='startdate', value=data.startdate)
        span.dateIcon
        br
        input(type='time', name='starttime', value=data.starttime)
        span.timeIcon
      .col-md-2.btw

      .col-md-5
        h4 End
        input(type='date', name='enddate', value=data.enddate)
        span.dateIcon
        input(type='time', name='endtime', value=data.endtime)
        span.timeIcon
      .clear

    if(locals.error)
      p.text-danger= error

  div.modal-footer
    a.btn(onclick="bookNow(); return false;") Book
