extends ../layout

block content
  br
  #layerBookGadget
  #search
    form(name='search', action='/gadgets/find/', method='get', id='formSearch') 
      input(type='text', name='q',style="padding-left: 40px;" id='inputTextSearch', placeholder='SEARCH' )
      div.lupe 
        input(type="image",src='/img/search.gif')
      div.inputButtonSearch
        input(type='image', name='submit', id='inputButtonSearch', src='/img/filter.gif', height='50px')
  #phones
    h1 Smartphones
    ul.elements
      - each gadget in gadgets
        li.element(onmouseover="$(this).find('.hide').show();$(this).find('.cont').hide();",onmouseout="$(this).find('.hide').hide();$(this).find('.cont').show();")
          .hide.info.grey
            .traffic_overlay 
            .click
              div.brand= gadget.brand
              div.name= gadget.name
              span.isolator
              div.os= gadget.os
            div.lastBook ich war es nicht
              br
              span.user Max Mustermann
            .buttons
              .detail
                a(href="/gadgets/"+gadget._id) Details
              .booking
                a(onclick="openBookingLayer('/bookings/"+gadget._id+"/new')") Book
          .cont
            a(href="/gadgets/"+gadget._id) 
              img(src='/img/device.jpg')
            if(gadget.booked)
              div.traffic_reserved
            else
              div.traffic
            a.click(onclick="openBookingLayer('/bookings/"+gadget._id+"/new')")
              div.spec
              
              div.brand= gadget.brand
              div.name= gadget.name
              span.isolator
              div.os= gadget.os
    div.clear    
