    link(href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,700,300italic' rel='stylesheet' type='text/css')
    body(class= (user && user.role === "admin" ? "admin-ui" : ""))
    .container

      .header

        .logo
          a(href="/")
            img(src='/img/Logo_sevenval.gif', class='logoImg')
            br
            b ODL
            span THEK

        if(locals.user)
          ul.nav.nav-pills
            li.active
              a(href="/") Gadgets
            li
              a(href="/gadgets/top") Top
            li
              a(href="/bookings") Bookings
            if(user.role == 'admin')
              li
                a(href="/users/") Users

          .account.text-right
            .pull-left
              strong=user.email
              br
              a(href="/users/logout") logout
            .pull-right
              img(src=user.avatarurl)

      #content
        block content

      #footer
        a(href='/imprint') imprint

