doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/detail.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="/javascripts/script.js")
    link(href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,700,300italic' rel='stylesheet' type='text/css')
  body
    #head
      div.head
        div.logo 
          img(src='/img/Logo_sevenval.gif', class='logoImg') 
          div.claim 
            span  
              b ODL
              span THEK
        ul.menu 
          if(locals.user)
            li
              a(href="/gadgets/") gadgets
            li
              a(href="/gadgets/top") top
            li
              a(href="/bookings/") bookings
            if(user.role == 'admin')
              li
                a(href="/users/") users
        #user
          if(locals.user)
            if(user.avatarurl)
              div(style="position: absolute; top: 25px; right: 100px;")
                if(user.name)
                  span.username= user.name
                else 
                  span.username= user.displayname
                br
                span.login 
                  a(href="/users/logout") logout
              div(style="position: relative; top: 25px; right: 25px; height:50px; width:50px;background-color: #ccc; border-radius: 0 10px 0 0; overflow:hidden;")
                img(src=user.avatarurl, style="width:50px; ")
            else 
              div(style="position: absolute; top: 25px; right: 10px;")
                if(user.name)
                  span.username= user.name
                else 
                  span.username= user.displayname
                br
                span.login 
                  a(href="/users/logout") logout
          else
            div(style="position: absolute; top: 25px; right: 10px;")
              span.login
                a(href="/users/auth/github") login
    block content

    #footer
      a(href='impress') Impressum
    
