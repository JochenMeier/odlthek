doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="/javascripts/script.js")
    link(href='http://fonts.googleapis.com/css?family=Ubuntu:400,700,300italic' rel='stylesheet' type='text/css')
  body
    #head
      div.head
        div.logo 
          img(src='/img/Logo_sevenval.gif', class='logoImg') 
          div.claim 
            span  
              b ODL
              span THEK
        ul.menu 
          if(locals.user)
            if(user.role == 'admin')
              li
                a(href="/users/") users
            li
              a(href="/gadgets/") gadgets
            li
              a(href="/bookings/") bookings
        #user
          if(locals.user)
            div(style="position: absolute; top: 0; right: 100px;")
              span.username= user.displayname
              br
              span.login 
                a(href="/users/logout") logout
            div(style="position: relative; top: 0; right: 0; height:90px; width:100px;background-color: #0f0;")
              if(user.avatarurl)
                img(src=user.avatarurl, style="width:100px; border-radius: 0 10px 0 0;")
          else
            p.login
              a(href="/users/auth/github") login
