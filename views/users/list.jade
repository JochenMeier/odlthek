extends ../layout

block content
  .table-responsive
    table
      tr
        th Name
        th Email
        th Type
        th Role
        th
      - each user in users
        tr
          td
            =user.name
          td
            =user.email
          td
            =user.type
          td
            =user.role
          td.tools
            a(href='/users/' + user._id).edit